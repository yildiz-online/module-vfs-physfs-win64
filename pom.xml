<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Yildiz Module Vfs PhysFs Win64</name>
  <description>Physfs implementation for the module vfs for windows 64.</description>
  <url>https://bitbucket.org/yildiz-engine-team/module-vfs-physfs-win64</url>

  <artifactId>module-vfs-physfs-win64</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <packaging>jar</packaging>
  <inceptionYear>2018</inceptionYear>
  <scm>
    <connection>scm:git:https://bitbucket.org/yildiz-engine-team/module-vfs-physfs-win64</connection>
    <developerConnection>scm:git:https://bitbucket.org/yildiz-engine-team/module-vfs-physfs-win64</developerConnection>
    <url>https://bitbucket.org/yildiz-engine-team/module-vfs-physfs-win64</url>
  </scm>

  <parent>
    <groupId>be.yildiz-games</groupId>
    <artifactId>parent-native</artifactId>
    <version>2.0.6</version>
  </parent>

  <properties>
    <nativeEnv>win64</nativeEnv>
  </properties>

  <dependencies>
    <dependency>
      <groupId>be.yildiz-games</groupId>
      <artifactId>module-vfs-physfs</artifactId>
      <version>1.0.0-SNAPSHOT</version>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>build</id>
      <dependencies>
        <dependency>
          <groupId>be.yildiz-games</groupId>
          <artifactId>component-native-physicsfs</artifactId>
          <version>3.0.1.1</version>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>common-physfs-file-unpack-include</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>be.yildiz-games</groupId>
                      <artifactId>module-vfs-physfs</artifactId>
                      <outputDirectory>src/</outputDirectory>
                      <includes>main/**/*.*</includes>
                    </artifactItem>
                    <artifactItem>
                      <groupId>be.yildiz-games</groupId>
                      <artifactId>component-native-physicsfs</artifactId>
                      <outputDirectory>src/main/scripts/win64/physicsfs</outputDirectory>
                      <includes>win64/**/*.*</includes>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <artifactId>exec-maven-plugin</artifactId>
        <groupId>org.codehaus.mojo</groupId>
      </plugin>
    </plugins>
  </build>

</project>
